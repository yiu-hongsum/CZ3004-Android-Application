<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ly_msg"
android:layout_width="match_parent"
android:layout_height="800dp"
android:orientation="vertical"
android:padding="5dp"
android:paddingEnd="14dp"
android:paddingStart="14dp">

<TextView
    android:id="@+id/header1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="bottom|center_horizontal"
    android:text="MDF String P1"
    android:textSize="25dp"
    android:textAllCaps="true"
    android:textColor="@color/red" />

<LinearLayout
    android:id="@+id/ly_mdf1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_mdf1"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:textSize="17sp"
        android:background="@drawable/grey_box"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textIsSelectable="true"/>



</LinearLayout>

    <TextView
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom|center_horizontal"
        android:text="MDF String P2"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/ly_mdf2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mdf2"
            android:layout_width="420dp"
            android:layout_height="100dp"
            android:background="@drawable/grey_box"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textIsSelectable="true"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_mdfbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btn_copy1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Copy MDF String 1"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_copy2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Copy MDF String 2"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom|center_horizontal"
        android:text="Obstacle String"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/ly_ob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ob"
            android:layout_width="420dp"
            android:layout_height="150dp"
            android:background="@drawable/grey_box"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textIsSelectable="true"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_obbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_copy3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Copy Obstacle String"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textSize="15sp"
        />
    </LinearLayout>


</LinearLayout>